<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".Fragment.ChangePasswordFragment">

    <TextView
        android:id="@+id/cedt_pasword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="@string/changepas"
        android:textAppearance="@style/login_to_yo" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_old_pass"
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/shape"
            android:hint="@string/oldpass"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAppearance="@style/place_holde" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_new_pass"
        android:layout_width="334dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:background="@drawable/shape"
            android:hint="@string/newpas"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textAppearance="@style/place_holde" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/rectangle"
        android:layout_width="214dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rectangle"
        >
        <Button
            android:id="@+id/btnChangePass"
            android:layout_width="214dp"
            android:layout_height="55dp"
            android:background="@drawable/rectangle_1"
            android:text="@string/change"
            android:textAppearance="@style/create_an_a" />
    </LinearLayout>

</LinearLayout>

